<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-instant-preview-app</name>
  <displayName>Instant Preview app</displayName>
  <description>Instant Preview app</description>
  <version>${project.version}</version>

  <!-- Components App definition. -->
  <!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	   in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-instantpreview</id>
    <component>
      <type>info.magnolia.ui.app.instantpreview.InstantPreviewAppMainSubApp</type>
      <implementation>info.magnolia.ui.app.instantpreview.InstantPreviewAppMainSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.instantpreview.InstantPreviewView</type>
      <implementation>info.magnolia.ui.app.instantpreview.InstantPreviewViewImpl</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
