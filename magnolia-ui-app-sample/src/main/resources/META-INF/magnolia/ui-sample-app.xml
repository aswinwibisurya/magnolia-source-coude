<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-sample-app</name>
  <displayName>UI Sample app</displayName>
  <description>UI Sample app</description>
  <versionHandler>info.magnolia.ui.app.sample.SampleAppModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

	<!-- App components definition. -->
	<!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	     in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-sample</id>
    <component>
      <type>info.magnolia.ui.app.sample.SampleView</type>
      <implementation>info.magnolia.ui.app.sample.SampleViewImpl</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admin-central</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
