<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-sample-app</name>
  <displayName>UI Sample app</displayName>
  <description>UI Sample app</description>
  <versionHandler>info.magnolia.ui.app.sample.setup.SampleAppModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

	<!-- App components definition. -->
	<!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	     in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-sample</id>
  </components>

  <components>
    <id>app-sample-main</id>
    <component>
      <type>info.magnolia.ui.app.sample.main.SampleMainSubApp</type>
      <implementation>info.magnolia.ui.app.sample.main.SampleMainSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.sample.main.SampleMainView</type>
      <implementation>info.magnolia.ui.app.sample.main.SampleMainViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.sample.main.NavigationView</type>
      <implementation>info.magnolia.ui.app.sample.main.NavigationViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.sample.main.ContentDisplayView</type>
      <implementation>info.magnolia.ui.app.sample.main.ContentDisplayViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.sample.main.NavigationPresenter</type>
      <implementation>info.magnolia.ui.app.sample.main.NavigationPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.sample.main.ContentDisplayPresenter</type>
      <implementation>info.magnolia.ui.app.sample.main.ContentDisplayPresenter</implementation>
    </component>
  </components>

  <components>
    <id>app-sample-editor</id>
    <component>
      <type>info.magnolia.ui.app.sample.editor.SampleEditorSubApp</type>
      <implementation>info.magnolia.ui.app.sample.editor.SampleEditorSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.sample.editor.SampleEditorView</type>
      <implementation>info.magnolia.ui.app.sample.editor.SampleEditorViewImpl</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
