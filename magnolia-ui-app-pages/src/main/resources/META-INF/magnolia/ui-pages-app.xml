<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-pages-app</name>
  <displayName>UI Pages app</displayName>
  <description>UI Pages app</description>
  <versionHandler>info.magnolia.ui.app.pages.setup.PagesAppModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <!-- App components definition. -->
  <!-- id of the components should be app-'appname'. 'appname' is the name 
    of the app configured in the apps configuration repository of the admin central. 
    (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-pages</id>
  </components>

  <components>
    <id>app-pages-browser</id>
  </components>

  <components>
    <id>app-pages-detail</id>
    <component>
      <type>info.magnolia.ui.app.pages.editor.PagesEditorSubAppView</type>
      <implementation>info.magnolia.ui.app.pages.editor.PagesEditorSubAppViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.vaadin.editor.PageEditorView</type>
      <implementation>info.magnolia.ui.vaadin.editor.PageEditor</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.pages.editor.PageEditorPresenter</type>
      <implementation>info.magnolia.ui.app.pages.editor.PageEditorPresenter</implementation>
    </component>
    
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
