<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-showcase-app</name>
  <displayName>UI Showcase app</displayName>
  <description>UI Showcase app</description>
  <versionHandler>info.magnolia.ui.app.showcase.setup.ShowcaseAppModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

	<!-- App components definition. -->
	<!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	     in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-showcase</id>
  </components>

  <components>
    <id>app-showcase-main</id>
    <component>
      <type>info.magnolia.ui.app.showcase.main.ShowcaseMainSubApp</type>
      <implementation>info.magnolia.ui.app.showcase.main.ShowcaseMainSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.ShowcaseMainView</type>
      <implementation>info.magnolia.ui.app.showcase.main.ShowcaseMainViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.VaadinPresenter</type>
      <implementation>info.magnolia.ui.app.showcase.main.VaadinPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.VaadinView</type>
      <implementation>info.magnolia.ui.app.showcase.main.VaadinViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.UnsupportedPresenter</type>
      <implementation>info.magnolia.ui.app.showcase.main.UnsupportedPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.UnsupportedView</type>
      <implementation>info.magnolia.ui.app.showcase.main.UnsupportedViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.FormsPresenter</type>
      <implementation>info.magnolia.ui.app.showcase.main.FormsPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.showcase.main.FormsView</type>
      <implementation>info.magnolia.ui.app.showcase.main.FormsViewImpl</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
