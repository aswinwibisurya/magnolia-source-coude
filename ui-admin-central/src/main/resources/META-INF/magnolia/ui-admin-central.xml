<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-admin-central</name>
  <displayName>Magnolia Velvet Admin Central</displayName>
  <description>New Magnolia Administration GUI</description>

  <version>${project.version}</version>

  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.m5admincentral.app.AppRegistry</type>
      <implementation>info.magnolia.m5admincentral.app.AppRegistryImpl</implementation>
    </component>
  </components>

   <components>
    <id>m5-admin-central</id>
    <component>
      <type>info.magnolia.ui.framework.event.EventBus</type>
      <implementation>info.magnolia.ui.framework.event.SimpleEventBus</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.framework.place.PlaceController</type>
      <implementation>info.magnolia.ui.framework.place.PlaceController</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.app.pages.PagesApp</type>
      <implementation>info.magnolia.m5admincentral.app.pages.PagesApp</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.app.assets.AssetsApp</type>
      <implementation>info.magnolia.m5admincentral.app.assets.AssetsApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.framework.shell.Shell</type>
      <implementation>info.magnolia.m5vaadin.shell.MagnoliaShell</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.app.AppController</type>
      <implementation>info.magnolia.m5admincentral.app.AppControllerImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.shellapp.applauncher.AppLauncherView</type>
      <implementation>info.magnolia.m5admincentral.shellapp.applauncher.AppLauncherViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.shellapp.pulse.PulseView</type>
      <implementation>info.magnolia.m5admincentral.shellapp.pulse.PulseViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.shellapp.favorites.FavoritesView</type>
      <implementation>info.magnolia.m5admincentral.shellapp.favorites.FavoritesViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.app.pages.PagesView</type>
      <implementation>info.magnolia.m5admincentral.app.pages.PagesViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.app.dialog.DialogTestView</type>
      <implementation>info.magnolia.m5admincentral.app.dialog.DialogTestViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.MagnoliaShellView</type>
      <implementation>info.magnolia.m5admincentral.MagnoliaShellViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.MagnoliaShellPresenter</type>
      <implementation>info.magnolia.m5admincentral.MagnoliaShellPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.app.assets.AssetsView</type>
      <implementation>info.magnolia.m5admincentral.app.assets.AssetsViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.dialog.registry.DummyDialogDefinitionManager</type>
      <implementation>info.magnolia.m5admincentral.dialog.registry.DummyDialogDefinitionManager</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.dialog.DialogPresenterFactory</type>
      <implementation>info.magnolia.m5admincentral.dialog.DialogPresenterFactoryImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.m5admincentral.dialog.DialogView</type>
      <implementation>info.magnolia.m5admincentral.dialog.DialogViewImpl</implementation>
    </component>

  </components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>4.5/*</version>
    </dependency>
    <!-- the dependency is just to ensure order of loading of modules -->
    <dependency>
      <name>adminInterface</name>
      <version>4.5/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>cache</name>
      <version>4.5/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>groovy</name>
      <version>4.5/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>dms</name>
      <version>4.5/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>workflow</name>
      <version>4.5/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>demo-project</name>
      <version>1.6/*</version>
      <optional>true</optional>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>AdminCentral</name>
      <class>com.vaadin.terminal.gwt.server.ApplicationServlet</class>
      <mappings>
        <mapping>/.magnolia/admin-central</mapping>
        <mapping>/.magnolia/admin-central/*</mapping>
      </mappings>
      <params>
        <param>
          <name>application</name>
          <value>info.magnolia.m5admincentral.M5AdminCentralApplication</value>
        </param>
        <param>
          <name>widgetset</name>
          <value>info.magnolia.m5admincentral.M5AdminCentralWidgetset</value>
        </param>
      </params>
    </servlet>
    <servlet>
      <name>VaadinClasspathResourcesSpool</name>
      <class>info.magnolia.cms.servlets.ClasspathSpool</class>
      <mappings>
        <mapping>/VAADIN/*</mapping>
      </mappings>
      <params>
        <param>
          <name>resourcesRoot</name>
          <value>/VAADIN</value>
        </param>
      </params>
    </servlet>
  </servlets>
</module>
