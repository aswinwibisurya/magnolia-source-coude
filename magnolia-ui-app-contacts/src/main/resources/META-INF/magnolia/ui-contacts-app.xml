<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-contacts-app</name>
  <displayName>UI Contacts App</displayName>
  <description>UI Contacts App</description>
  <class>info.magnolia.ui.app.contacts.ContactsModule</class>
  <versionHandler>info.magnolia.ui.app.contacts.ContactsAppModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <!-- Used to create an App component provider for injection of AppContext for example -->
  <!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
       in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-contacts</id>
  </components>

  <components>
    <id>app-contacts-main</id>
    <component>
      <type>info.magnolia.ui.app.contacts.ContactsMainSubApp</type>
      <implementation>info.magnolia.ui.app.contacts.ContactsMainSubApp</implementation>
    </component>
  </components>

  <components>
    <id>app-contacts-item</id>
    <component>
      <type>info.magnolia.ui.app.contacts.item.ContactsItemSubApp</type>
      <implementation>info.magnolia.ui.app.contacts.item.ContactsItemSubApp</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <name>magnolia</name>
      <workspaces>
        <workspace>contacts</workspace>
      </workspaces>
      <nodeTypeFile>/mgnl-nodetypes/magnolia-contacts-nodetype.xml</nodeTypeFile>
    </repository>
  </repositories>
</module>
