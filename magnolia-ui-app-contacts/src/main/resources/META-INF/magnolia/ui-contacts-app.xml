<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-contacts-app</name>
  <displayName>UI Contacts App</displayName>
  <description>UI Contacts App</description>
  <class>info.magnolia.ui.app.contacts.ContactsAppModule</class>
  <versionHandler>info.magnolia.ui.app.contacts.ContactsAppModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

	<!-- Used to create an App component provider for injection of AppContext for example -->
	<!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	     in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
   <components>
    <id>app-contacts</id>
     <component>
       <type>info.magnolia.ui.app.contacts.ContactsMainSubApp</type>
       <implementation>info.magnolia.ui.app.contacts.ContactsMainSubApp</implementation>
     </component>
     <component>
      <type>info.magnolia.ui.app.contacts.ContactsView</type>
      <implementation>info.magnolia.ui.app.contacts.ContactsViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.admincentral.workbench.ContentWorkbenchView</type>
      <implementation>info.magnolia.ui.admincentral.workbench.ContentWorkbenchViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.admincentral.workbench.ContentWorkbenchSubApp</type>
      <implementation>info.magnolia.ui.admincentral.workbench.ContentWorkbenchSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.admincentral.content.view.ContentPresenter</type>
      <implementation>info.magnolia.ui.admincentral.content.view.ContentPresenter</implementation>
    </component>
   </components>

   <components>
    <id>admincentral</id>
    <component>
      <type>info.magnolia.ui.admincentral.thumbnail.ThumbnailProvider</type>
      <workspace>config</workspace>
      <path>/modules/ui-contacts-app/thumbnailProvider</path>
      <observed>true</observed>
      <scope>singleton</scope>
    </component>
    </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <name>magnolia</name>
      <workspaces>
        <workspace>contacts</workspace>
      </workspaces>
      <nodeTypeFile>/mgnl-nodetypes/magnolia-contacts-nodetype.xml</nodeTypeFile>
    </repository>
  </repositories>
</module>
