<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>vaadin</name>
  <displayName>Magnolia Vaadin Integration Module</displayName>
  <class>info.magnolia.ui.vaadin.integration.module.VaadinModule</class>
  <version>${project.version}</version>
  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>VaadinClasspathResourcesSpool</name>
      <class>info.magnolia.cms.servlets.ClasspathSpool</class>
      <mappings>
        <mapping>/VAADIN/*</mapping>
      </mappings>
      <params>
        <param>
          <name>resourcesRoot</name>
          <value>/VAADIN</value>
        </param>
      </params>
    </servlet>
  </servlets>
</module>
