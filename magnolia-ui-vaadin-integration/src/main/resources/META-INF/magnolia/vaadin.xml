<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>vaadin</name>
  <displayName>Magnolia Vaadin Integration Module</displayName>
  <class>info.magnolia.ui.vaadin.integration.module.VaadinModule</class>
  <version>${project.version}</version>

  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.ui.vaadin.integration.i18n.I18NAuthoringSupport</type>
      <workspace>config</workspace>
      <path>/server/i18n/authoring</path>
      <observed>true</observed>
      <scope>singleton</scope>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
