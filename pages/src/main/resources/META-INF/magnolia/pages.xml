<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>pages</name>
  <displayName>Pages app</displayName>
  <description>Pages app</description>
  <versionHandler>info.magnolia.pages.setup.PagesModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <!-- App components definition. -->
  <!-- id of the components should be app-'appname'. 'appname' is the name
    of the app configured in the apps configuration repository of the admin central.
    (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-pages</id>
  </components>

  <components>
    <id>app-pages-browser</id>
  </components>

  <components>
    <id>app-pages-detail</id>
    <component>
      <type>info.magnolia.pages.app.editor.PagesEditorSubAppView</type>
      <implementation>info.magnolia.pages.app.editor.PagesEditorSubAppViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.vaadin.editor.PageEditorView</type>
      <implementation>info.magnolia.ui.vaadin.editor.PageEditorViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.PageEditorPresenter</type>
      <implementation>info.magnolia.pages.app.editor.PageEditorPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.PageEditorPresenter</type>
      <implementation>info.magnolia.pages.app.editor.PageEditorPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.parameters.PageEditorStatus</type>
      <implementation>info.magnolia.pages.app.editor.parameters.DefaultPageEditorStatus</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.extension.ExtensionFactory</type>
      <implementation>info.magnolia.pages.app.editor.extension.DefaultExtensionFactory</implementation>
    </component>

    <!-- Status bar and extensions -->
    <component>
      <type>info.magnolia.pages.app.editor.statusbar.StatusBarPresenter</type>
      <implementation>info.magnolia.pages.app.editor.statusbar.StatusBarPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.statusbar.activationstatus.ActivationStatusView</type>
      <implementation>info.magnolia.pages.app.editor.statusbar.activationstatus.ActivationStatusViewImpl</implementation>
    </component>

    <!-- Page bar and extensions -->
    <component>
      <type>info.magnolia.pages.app.editor.pagebar.PageBarPresenter</type>
      <implementation>info.magnolia.pages.app.editor.pagebar.PageBarPresenter</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.vaadin.editor.pagebar.PageBarView</type>
      <implementation>info.magnolia.ui.vaadin.editor.pagebar.PageBarViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.pagebar.languageselector.LanguageSelector</type>
      <implementation>info.magnolia.pages.app.editor.pagebar.languageselector.LanguageSelector</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.pagebar.languageselector.LanguageSelectorView</type>
      <implementation>info.magnolia.pages.app.editor.pagebar.languageselector.LanguageSelectorViewImpl</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.pagebar.platformselector.PlatformSelector</type>
      <implementation>info.magnolia.pages.app.editor.pagebar.platformselector.PlatformSelector</implementation>
    </component>
    <component>
      <type>info.magnolia.pages.app.editor.pagebar.platformselector.PlatformSelectorView</type>
      <implementation>info.magnolia.pages.app.editor.pagebar.platformselector.PlatformSelectorViewImpl</implementation>
    </component>
  </components>

  <components>
    <id>main</id>
    <type-mapping>
      <type>info.magnolia.pages.app.editor.extension.definition.ExtensionDefinition</type>
      <implementation>info.magnolia.pages.app.editor.extension.definition.ConfiguredExtensionDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.pages.app.editor.pagebar.definition.PageBarDefinition</type>
      <implementation>info.magnolia.pages.app.editor.pagebar.definition.ConfiguredPageBarDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.pages.app.editor.statusbar.definition.StatusBarDefinition</type>
      <implementation>info.magnolia.pages.app.editor.statusbar.definition.ConfiguredStatusBarDefinition</implementation>
    </type-mapping>
  </components>

  <components>
    <id>subapp</id>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <name>activation</name>
      <version>5.0.2/*</version>
    </dependency>
  </dependencies>
</module>
