<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-workbench</name>
  <displayName>Workbench</displayName>
  <description>Workbench Component for Content Apps.</description>
  <class>info.magnolia.ui.workbench.WorkbenchModule</class>
  <version>${project.version}</version>

  <components>
    <id>main</id>

    <type-mapping>
      <type>info.magnolia.ui.workbench.definition.WorkbenchDefinition</type>
      <implementation>info.magnolia.ui.workbench.definition.ConfiguredWorkbenchDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.ui.workbench.definition.NodeTypeDefinition</type>
      <implementation>info.magnolia.ui.workbench.definition.ConfiguredNodeTypeDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.ui.workbench.definition.ContentPresenterDefinition</type>
      <implementation>info.magnolia.ui.workbench.definition.ConfiguredContentPresenterDefinition</implementation>
    </type-mapping>
  </components>

  <components>
    <id>app</id>
    <component>
      <type>info.magnolia.ui.workbench.WorkbenchPresenter</type>
      <implementation>info.magnolia.ui.workbench.WorkbenchPresenter</implementation>
    </component>

    <component>
      <type>info.magnolia.ui.workbench.WorkbenchView</type>
      <implementation>info.magnolia.ui.workbench.WorkbenchViewImpl</implementation>
    </component>

    <component>
      <type>info.magnolia.ui.workbench.ContentPresenter</type>
      <implementation>info.magnolia.ui.workbench.ContentPresenter</implementation>
    </component>

    <component>
      <type>info.magnolia.ui.statusbar.StatusBarView</type>
      <implementation>info.magnolia.ui.statusbar.StatusBarViewImpl</implementation>
    </component>
  </components>
</module>