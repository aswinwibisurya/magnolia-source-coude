<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-security-app</name>
  <displayName>UI Security App</displayName>
  <description>UI Security App</description>
  <class>info.magnolia.ui.app.security.SecurityModule</class>
  <version>${project.version}</version>

    <!-- Used to create an App component provider for injection of AppContext for example -->
    <!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
         in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
   <components>
    <id>app-security</id>
   </components>

  <components>
    <id>app-security-users</id> <!-- browser subapp -->
    <component>
      <type>info.magnolia.ui.app.security.SecurityUsersSubApp</type>
      <implementation>info.magnolia.ui.app.security.SecurityUsersSubApp</implementation>
    </component>

  </components>

  <components>
    <id>app-security-systemUsers</id>
    <component>
      <type>info.magnolia.ui.app.security.SecurityUsersSubApp</type>
      <implementation>info.magnolia.ui.app.security.SecurityUsersSubApp</implementation>
    </component>
  </components>

  <components>
    <id>app-security-groups</id>
    <component>
      <type>info.magnolia.ui.app.security.SecurityGroupsSubApp</type>
      <implementation>info.magnolia.ui.app.security.SecurityGroupsSubApp</implementation>
    </component>
  </components>

  <components>
    <id>app-security-roles</id>
    <component>
      <type>info.magnolia.ui.app.security.SecurityRolesSubApp</type>
      <implementation>info.magnolia.ui.app.security.SecurityRolesSubApp</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

</module>
