<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>ui-messages-app</name>
  <displayName>UI Messages app</displayName>
  <description>UI Messages app</description>
  <version>${project.version}</version>

  <!-- Components App definition. -->
  <!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	   in the apps configuration repository of the admin central. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-messages</id>
    <component>
      <type>info.magnolia.ui.app.messages.MessagesAppMainSubApp</type>
      <implementation>info.magnolia.ui.app.messages.MessagesAppMainSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.ui.app.messages.MessagesView</type>
      <implementation>info.magnolia.ui.app.messages.MessagesViewImpl</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>
</module>
