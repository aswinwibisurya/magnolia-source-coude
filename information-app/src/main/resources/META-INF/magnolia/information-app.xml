<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>information-app</name>
  <displayName>magnolia-information-app</displayName>
  <description>The information app shows an overview of the instance version, environment and license information.</description>
  <version>${project.version}</version>

  <!-- Components App definition. -->
  <!-- id of the components should be app-'appname'. 'appname' is the name of the app configured
	   in the apps configuration repository of the admincentral. (config/module/apps/appname/name:appname) -->
  <components>
    <id>app-information</id>
  </components>

  <components>
    <id>app-information-main</id>
    <component>
      <type>info.magnolia.information.app.InformationMainSubApp</type>
      <implementation>info.magnolia.information.app.InformationMainSubApp</implementation>
    </component>
    <component>
      <type>info.magnolia.information.app.InformationView</type>
      <implementation>info.magnolia.information.app.InformationViewImpl</implementation>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>ui-admincentral</name>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</module>